<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://sysFinCurcyExchRateEdit.caption"
        focusComponent="form">
    <data>
        <instance id="sysFinCurcyExchRateDc"
                  class="ca.ampautomation.ampata.entity.sys.SysNode"
                  fetchPlan="sysFinCurcyExchRate-fetch-plan-base">
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="sysFinCurcyExchRateDc">
            <column width="350px">
                <textField id="id" property="id" width="100%" editable="false" tabIndex="10"/>
                <hbox caption="id2" expand="id2Field" width="100%">
                    <textField id="id2Field" dataContainer="sysFinCurcyExchRateDc" property="id2" tabIndex="10"/>
                    <button id="updateId2FieldBtn" icon="font-icon:REFRESH" tabIndex="-1"/>
                </hbox>
                <hbox caption="id2Calc" expand="id2CalcField" width="100%">
                    <textField id="id2CalcField" dataContainer="sysFinCurcyExchRateDc" property="id2Calc" editable="false" tabIndex="10"/>
                    <button id="updateId2CalcFieldBtn" icon="font-icon:REFRESH" tabIndex="-1"/>
                </hbox>
                <hbox caption="id2Cmp" expand="id2CmpField" width="100%">
                    <checkBox id="id2CmpField" dataContainer="sysFinCurcyExchRateDc" property="id2Cmp" editable="false" tabIndex="10"/>
                    <button id="updateId2CmpFieldBtn" icon="font-icon:REFRESH" tabIndex="-1"/>
                </hbox>
                <hbox caption="id2Dup" expand="id2DupField" width="100%">
                    <textField id="id2DupField" dataContainer="sysFinCurcyExchRateDc" property="id2Dup" editable="false" tabIndex="10"/>
                    <button id="updateId2DupFieldBtn" icon="font-icon:REFRESH" tabIndex="-1"/>
                </hbox>
                <textField id="name1Field" property="name1"/>
                <dateField id="begDate1Field" property="beg1.date1" dateFormat="yyyy-MM-dd"/>
                <textField id="amt1Field" property="amt1">
                    <formatter>
                        <number format="#0.000000###"/>
                    </formatter>
                </textField>
                <textField id="amt2Field" property="amt2">
                    <formatter>
                        <number format="#0.000000###"/>
                    </formatter>
                </textField>
                <textField id="sysFinCurcy1_IdField" property="sysFinCurcy1_Id2"/>
                <textField id="sysFinCurcy2_IdField" property="sysFinCurcy2_Id2"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
