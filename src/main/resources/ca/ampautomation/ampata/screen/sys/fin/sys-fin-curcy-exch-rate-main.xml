<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://sysFinCurcyExchRateMain.caption"
        focusComponent="tableMain">
    <data>
        <collection id="colCntnrMain"
                    class="ca.ampautomation.ampata.entity.sys.SysNode"
                    fetchPlan="fetchPlan_SysFinCurcyExchRate_Base">
            <loader id="colLoadrMain">
                <query>
                    <![CDATA[select e from enty_SysNode e where e.className = 'SysFinCurcyExchRate' order by e.id2]]>
                </query>
            </loader>
        </collection>
        <instance id="instCntnrMain"
                  class="ca.ampautomation.ampata.entity.sys.SysNode"
                  fetchPlan="fetchPlan_SysFinCurcyExchRate_Base">
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="save" icon="OK" caption="msg:///actions.Ok" shortcut="CTRL-ENTER"/>
        <action id="cancel" icon="CANCEL" caption="msg:///actions.Cancel" description="Esc"/>
    </actions>
    <dialogMode width="1024" height="768"/>
    <layout>
        <split id="split" height="100%" orientation="vertical" reversePosition="true" width="100%">
            <vbox id="lookupBox" expand="tableMain" height="100%" margin="false,true,false,false" spacing="true">
                <filter id="filter"
                        dataLoader="colLoadrMain" collapsable="true" collapsed="true" columnsCount="4">
                    <properties include=".*"/>
                    <configurations>
                        <configuration id="filterConfig1" default="true">
                            <propertyFilter id="filterConfig1A_Id2" caption="id2" operation="CONTAINS" property="id2" operationEditable="true" colspan="2"/>
                            <propertyFilter id="filterConfig1A_name1" caption="name1" operation="CONTAINS" property="name1" operationEditable="true" colspan="2"/>
                            <propertyFilter id="filterConfig1A_Beg1GE" caption="beg1.date1" operation="GREATER_OR_EQUAL" property="ts1.elDt" operationEditable="true"/>
                            <propertyFilter id="filterConfig1A_Beg1LE" caption="beg1.date1" operation="LESS_OR_EQUAL" property="ts1.elDt" operationEditable="true"/>
                            <propertyFilter id="filterConfig1A_FinCurcy1_Id" caption="finCurcy1_Id" operation="EQUAL" property="finCurcy1_Id" operationEditable="true">
                                <entityComboBox metaClass="enty_SysNode"/>
                            </propertyFilter>
                            <propertyFilter id="filterConfig1A_FinCurcy2_Id" caption="finCurcy2_Id" operation="EQUAL" property="finCurcy2_Id" operationEditable="true">
                                <entityComboBox metaClass="enty_SysNode"/>
                            </propertyFilter>
                        </configuration>
                    </configurations>
                </filter>
                <table id="tableMain"
                            width="100%"
                            multiselect="true"
                            dataContainer="colCntnrMain">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="refresh" type="refresh"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="id2" caption="id2"/>
                        <column id="id2Dup" caption="id2Dup"/>
                        <column id="sortIdx" caption="sortIdx"/>
                        <column id="name1" caption="name1"/>
                        <column id="desc1" caption="desc1" width="360px"/>
                        <column id="ts1.elDt" caption="beg1.date1"/>
                        <column id="amt1" caption="amt1">
                            <formatter>
                                <number format="#0.000000"/>
                            </formatter>
                        </column>
                        <column id="amt2" caption="amt2">
                            <formatter>
                                <number format="#0.000000"/>
                            </formatter>
                        </column>
                        <column id="finCurcy1_Id" caption="finCurcy1_Id"/>
                        <column id="finCurcy2_Id" caption="finCurcy2_Id"/>
                    </columns>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <tabSheet  width="100%">
                            <tab id="tabCmd1" caption="Main" spacing="true">
                                <hbox spacing="true">
                                    <button id="reloadListsBtn" caption="Reload Lists" icon="font-icon:LIST"/>
                                    <button id="updateColCalcValsBtn" caption="Update All Calc Vals" icon="font-icon:REFRESH"/>
                                    <label value="|" align="MIDDLE_CENTER"/>
                                </hbox>
                            </tab>

                            <tab id="tabCmd2" caption="Create, Edit" spacing="true">
                                <hbox spacing="true">
                                    <button id="refreshBtn" action="tableMain.refresh"/>
                                    <label value="|" align="MIDDLE_CENTER"/>
                                    <button id="createBtn" action="tableMain.create"/>
                                    <button id="duplicateBtn" caption="Duplicate" icon="font-icon:COPY"/>
                                    <button id="deriveBtn" caption="Derive" icon="font-icon:COPY"/>
                                    <label value="|" align="MIDDLE_CENTER"/>
                                    <button id="removeBtn" action="tableMain.remove"/>
                                    <label value="|" align="MIDDLE_CENTER"/>
                                    <button id="editBtn" action="tableMain.edit"/>
                                    <label value="|" align="MIDDLE_CENTER"/>
                                    <button id="setBtn" caption="Set" icon="font-icon:REFRESH"/>
                                    <label value="|" align="MIDDLE_CENTER"/>
                                    <button id="updateColItemCalcValsBtn" caption="Update Calc Vals" icon="font-icon:REFRESH"/>
                                </hbox>
                                <hbox spacing="true">
                                    <hbox caption="finCurcy1_Id2" width="250px" expand="tmplt_FinCurcy1_IdField">
                                        <hbox width="60px" height="100%" css="background-color: #F2F2F2 ; border: 1px solid #637497; border-radius: 8px;">
                                            <checkBox id="tmplt_FinCurcy1_IdFieldChk" align="MIDDLE_RIGHT" width="10px"/>
                                        </hbox>
                                        <entityComboBox id="tmplt_FinCurcy1_IdField"/>
                                    </hbox>
                                    <hbox caption="finCurcy2_Id2" width="250px" expand="tmplt_FinCurcy2_IdField">
                                        <hbox width="60px" height="100%" css="background-color: #F2F2F2 ; border: 1px solid #637497; border-radius: 8px;">
                                            <checkBox id="tmplt_FinCurcy2_IdFieldChk" align="MIDDLE_RIGHT" width="10px"/>
                                        </hbox>
                                        <entityComboBox id="tmplt_FinCurcy2_IdField"/>
                                    </hbox>
                                    <hbox caption="beg1.ts1">
                                        <hbox width="60px" height="100%" css="background-color: #F2F2F2 ; border: 1px solid #637497; border-radius: 8px;">
                                            <checkBox id="tmplt_Beg1Ts1FieldChk" align="MIDDLE_RIGHT"/>
                                        </hbox>
                                        <dateField id="tmplt_Beg1Ts1Field" datatype="localDateTime" dateFormat="yyyy-MM-dd"/>
                                    </hbox>
                                </hbox>
                            </tab>
                            <tab id="tabCmd4" caption="Filter" spacing="true">
                                <hbox spacing="true">
                                    <button id="filterPrevBeg1Date1GEBtn" caption="Prev beg1.Date1" icon="ARROW_LEFT"/>
                                    <button id="filterNextBeg1Date1GEBtn" caption="Next beg1.Date1" icon="ARROW_RIGHT"/>
                                </hbox>
                            </tab>
                        </tabSheet>
                    </buttonsPanel>
                </table>
                <pagination align="MIDDLE_RIGHT" itemsPerPageDefaultValue="50" itemsPerPageVisible="true">
                    <containerProvider dataContainer="colCntnrMain"/>
                </pagination>                <hbox id="lookupActions" spacing="true" visible="false">
                    <button action="lookupSelectAction"/>
                    <button action="lookupCancelAction"/>
                </hbox>
            </vbox>
            <vbox id="editBox" expand="fieldGroupBox" height="100%" margin="true,false,false,false" spacing="true">
                <scrollBox id="fieldGroupBox" width="100%" contentMinHeight="400px" contentMinWidth="1200px">
                    <form id="form" dataContainer="instCntnrMain" width="100%">
                        <tabSheet id="tabsheet1" width="100%">
                            <tab id="tab_1"
                                 caption="General"
                                 margin="true"
                                 spacing="true">
                                <form id="tab1Form" dataContainer="instCntnrMain">
                                    <column width="480px">
                                        <hbox caption="desc1" expand="desc1Field" width="1200px" colspan="3" >
                                            <textArea id="desc1Field" dataContainer="instCntnrMain" property="desc1" tabIndex="10" rows="1"/>
                                            <button id="updateDesc1FieldBtn" icon="font-icon:REFRESH" tabIndex="-1"/>
                                        </hbox>
                                        <hbox caption="id" expand="idField" width="100%">
                                            <textField id="idField" dataContainer="instCntnrMain" property="id" editable="false" tabIndex="10"/>
                                        </hbox>
                                        <hbox caption="id2" expand="id2Field" width="100%">
                                            <textField id="id2Field" dataContainer="instCntnrMain" property="id2" tabIndex="10"/>
                                            <button id="updateId2FieldBtn" icon="font-icon:REFRESH" tabIndex="-1"/>
                                        </hbox>
                                        <hbox caption="id2Calc" expand="id2CalcField" width="100%">
                                            <textField id="id2CalcField" dataContainer="instCntnrMain" property="id2Calc" editable="false" tabIndex="10"/>
                                            <button id="updateId2CalcFieldBtn" icon="font-icon:REFRESH" tabIndex="-1"/>
                                        </hbox>
                                        <hbox caption="id2Cmp" expand="id2CmpField" width="100%">
                                            <checkBox id="id2CmpField" dataContainer="instCntnrMain" property="id2Cmp" editable="false" tabIndex="10"/>
                                            <button id="updateId2CmpFieldBtn" icon="font-icon:REFRESH" tabIndex="-1"/>
                                        </hbox>
                                        <hbox caption="id2Dup" expand="id2DupField" width="100%">
                                            <textField id="id2DupField" dataContainer="instCntnrMain" property="id2Dup" editable="false" tabIndex="10"/>
                                            <button id="updateId2DupFieldBtn" icon="font-icon:REFRESH" tabIndex="-1"/>
                                        </hbox>
                                        <hbox caption="name1" expand="name1Field" width="100%">
                                            <textField id="name1Field" dataContainer="instCntnrMain"
                                                       property="name1" tabIndex="10"/>
                                        </hbox>
                                        <hbox caption="sortIdx" expand="sortIdxField" width="100%">
                                            <textField id="sortIdxField" dataContainer="instCntnrMain"
                                                       property="sortIdx" tabIndex="10"/>
                                        </hbox>
                                        <hbox caption="sortKey" expand="sortKeyField" width="100%">
                                            <textField id="sortKeyField" dataContainer="instCntnrMain"
                                                       property="sortKey" tabIndex="10"/>
                                        </hbox>
                                    </column>
                                    <column width="360px">
                                        <hbox caption="finCurcy1_Id" expand="finCurcy1_IdField" width="100%">
                                            <entityComboBox id="finCurcy1_IdField" dataContainer="instCntnrMain" property="finCurcy1_Id" tabIndex="20">
                                                <actions>
                                                    <action id="entityOpen" type="entity_open"/>
                                                    <action id="entityClear" type="entity_clear"/>
                                                </actions>
                                            </entityComboBox>
                                            <button id="updateFinCurcy1_IdFieldListBtn" icon="font-icon:LIST" tabIndex="-1"/>
                                        </hbox>
                                        <hbox caption="finCurcy2_Id" expand="finCurcy2_IdField" width="100%">
                                            <entityComboBox id="finCurcy2_IdField" dataContainer="instCntnrMain" property="finCurcy2_Id" tabIndex="20">
                                                <actions>
                                                    <action id="entityOpen" type="entity_open"/>
                                                    <action id="entityClear" type="entity_clear"/>
                                                </actions>
                                            </entityComboBox>
                                            <button id="updateFinCurcy2_IdFieldListBtn" icon="font-icon:LIST" tabIndex="-1"/>
                                        </hbox>
                                        <hbox caption="Beg1" width="100%">
                                            <dateField id="beg1Ts1Field" property="ts1.elTs" dataContainer="instCntnrMain"
                                                       tabIndex="20" datatype="localDateTime" width="220px" dateFormat="yyyy-MM-dd"/>
                                        </hbox>
                                    </column>
                                    <column width="360px">
                                        <hbox caption="amt1" expand="amt1Field" width="100%">
                                            <textField id="amt1Field" dataContainer="instCntnrMain"
                                                       property="amt1" tabIndex="30">
                                                <formatter>
                                                    <number format="#0.000000###"/>
                                                </formatter>
                                            </textField>
                                        </hbox>
                                        <hbox caption="amt2" expand="amt2Field" width="100%">>
                                            <textField id="amt2Field" dataContainer="instCntnrMain"
                                                       property="amt2" tabIndex="30">
                                                <formatter>
                                                    <number format="#0.000000###"/>
                                                </formatter>
                                            </textField>
                                            <button id="updateAmt2FieldBtn" icon="font-icon:REFRESH"
                                                    tabIndex="-1"/>
                                        </hbox>
                                    </column>
                                </form>
                            </tab>
                        </tabSheet>
                    </form>
                    <hbox id="actionsPane" spacing="true" visible="false">
                        <button id="saveBtn" action="save"/>
                        <button id="cancelBtn" action="cancel"/>
                    </hbox>
                </scrollBox>
            </vbox>
        </split>
    </layout>
</window>
