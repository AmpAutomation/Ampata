<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://sysFinCurcyExchRateBrowse.caption"
        focusComponent="table">
    <data readOnly="true">
        <collection id="sysFinCurcyExchRatesDc"
                    class="ca.ampautomation.ampata.entity.sys.SysNode"
                    fetchPlan="sysFinCurcyExchRate-fetch-plan-base">
            <loader id="sysFinCurcyExchRatesDl">
                <query>
                    <![CDATA[select e from ampata_SysNode e where e.className = 'SysFinCurcyExchRate' order by e.id2]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="table" spacing="true">
        <filter id="filter"
                dataLoader="sysFinCurcyExchRatesDl" collapsable="true" collapsed="true" columnsCount="4">
            <properties include=".*"/>
            <configurations>
                <configuration id="filterConfig1" default="true">
                    <propertyFilter id="propFilter_id2" caption="id2" operation="CONTAINS" property="id2" operationEditable="true" colspan="2"/>
                    <propertyFilter id="propFilter_name1" caption="name1" operation="CONTAINS" property="name1" operationEditable="true" colspan="2"/>
                    <propertyFilter id="propFilter_beg1Date1GE" caption="beg1.date1" operation="GREATER_OR_EQUAL" property="beg1.date1" operationEditable="true"/>
                    <propertyFilter id="propFilter_beg1Date1LE" caption="beg1.date1" operation="LESS_OR_EQUAL" property="beg1.date1" operationEditable="true"/>
                    <propertyFilter id="propFilter_sysFinCurcy1_Id" caption="sysFinCurcy1_Id" operation="EQUAL" property="sysFinCurcy1_Id2" operationEditable="true"/>
                    <propertyFilter id="propFilter_sysFinCurcy2_Id" caption="sysFinCurcy2_Id" operation="EQUAL" property="sysFinCurcy2_Id2" operationEditable="true"/>
                </configuration>
            </configurations>
        </filter>
        <groupTable id="table"
                    width="100%"
                    dataContainer="sysFinCurcyExchRatesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="refresh" type="refresh"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="id2" caption="id2"/>
                <column id="name1" caption="name"/>
                <column id="beg1.date1" caption="beg1.date1"/>
                <column id="amt1" caption="amt1">
                    <formatter>
                        <number format="#0.000000"/>
                    </formatter>
                </column>
                <column id="amt2" caption="amt2">
                    <formatter>
                        <number format="#0.000000"/>
                    </formatter>
                </column>
                <column id="sysFinCurcy1_Id2"/>
                <column id="sysFinCurcy2_Id2"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <tabSheet  width="100%">
                    <tab id="tabCmd1" caption="Main" spacing="true">
                        <hbox spacing="true">
                            <button id="refreshBtn" action="table.refresh"/>
                            <button id="reloadLists" caption="Reload Lists" icon="font-icon:LIST"/>
                            <label value="|" align="MIDDLE_CENTER"/>
                            <button id="removeBtn" action="table.remove"/>
                        </hbox>
                    </tab>

                    <tab id="tabCmd2" caption="View">
                        <hbox spacing="true">
                            <button id="finStmtHideBtn" caption="Hide Stmt Details" icon="font-icon:EYE"/>
                            <label value="|" align="MIDDLE_CENTER"/>
                            <button id="finTxactItmHideBtn" caption="Hide Txfers" icon="font-icon:EYE"/>
                        </hbox>
                    </tab>
                    <tab id="tabCmd3" caption="Create, Edit" spacing="true">
                        <hbox spacing="true">
                            <button id="createBtn" action="table.create"/>
                            <button id="duplicateBtn" caption="Duplicate" icon="font-icon:COPY"/>
                            <button id="deriveBtn" caption="Derive" icon="font-icon:COPY"/>
                            <label value="|" align="MIDDLE_CENTER"/>
                            <button id="editBtn" action="table.edit"/>
                            <label value="|" align="MIDDLE_CENTER"/>
                            <button id="updateColItemCalcValsBtn" caption="Update Calc Vals" icon="font-icon:REFRESH"/>
                        </hbox>
                        <hbox spacing="true">
                            <hbox caption="beg1.date1">
                                <hbox width="60px" height="100%" css="background-color: #F2F2F2 ; border: 1px solid #637497; border-radius: 8px;">
                                    <checkBox id="tmplt_beg1Date1FieldChk" align="MIDDLE_RIGHT"/>
                                </hbox>
                                <dateField id="tmplt_beg1Date1Field" datatype="localDate" dateFormat="yyyy-MM-dd"/>
                            </hbox>
                        </hbox>
                    </tab>
                    <tab id="tabCmd4" caption="Filter" spacing="true">
                        <hbox spacing="true">
                            <button id="filterPrevBeg1Date1GEBtn" caption="Prev beg1.Date1" icon="ARROW_LEFT"/>
                            <button id="filterNextBeg1Date1GEBtn" caption="Next beg1.Date1" icon="ARROW_RIGHT"/>
                        </hbox>
                    </tab>
                </tabSheet>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
