<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://sysNodeFinCurcyExchRateBrowse.caption"
        focusComponent="tableMain">
    <data readOnly="true">
        <collection id="colLoadrMain"
                    class="ca.ampautomation.ampata.entity.sys.node.fin.SysNodeFinCurcyExchRate"
                    fetchPlan="fetchPlan_SysNodeFinCurcyExchRate_Base">
            <loader id="colLoadrMain">
                <query>
                    <![CDATA[select e from enty_SysNodeFinCurcyExchRate e where e.className = 'SysNodeFinCurcyExchRate' order by e.sortKey, e.id2]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode width="1024" height="768"/>
    <layout expand="tableMain" spacing="true">
        <filter id="filter"
                dataLoader="colLoadrMain" collapsable="true" collapsed="true" columnsCount="4">
            <properties include=".*"/>
            <configurations>
                <configuration id="filterConfig1" default="true">
                    <propertyFilter id="filterConfig1A_Id2" caption="id2" operation="CONTAINS" property="id2" operationEditable="true" colspan="2"/>
                    <propertyFilter id="filterConfig1A_Id2Dup" caption="id2Dup" operation="EQUAL" property="id2Dup" operationEditable="true"/>
                    <propertyFilter id="filterConfig1A_Name1" caption="name1" operation="CONTAINS" property="name1" operationEditable="true"/>
                    <propertyFilter id="filterConfig1A_Desc1" caption="desc1" operation="CONTAINS" property="desc1" operationEditable="true"/>
                    <propertyFilter id="filterConfig1A_Type1_Id" caption="type1" operation="EQUAL" property="type1_Id" operationEditable="true">
                        <entityComboBox metaClass="enty_SysNodeFinCurcyExchRateType"/>
                    </propertyFilter>

                    <propertyFilter id="filterConfig1A_FinCurcy1_Id" caption="sysNodeFinCurcy1_Id" operation="EQUAL" property="finCurcy1_Id" operationEditable="true">
                        <entityComboBox metaClass="enty_SysNodeFinCurcy"/>
                    </propertyFilter>
                    <propertyFilter id="filterConfig1A_FinCurcy2_Id" caption="sysNodeFinCurcy2_Id" operation="EQUAL" property="finCurcy2_Id" operationEditable="true">
                        <entityComboBox metaClass="enty_SysNodeFinCurcy"/>
                    </propertyFilter>
                    <propertyFilter id="filterConfig1A_Nm1s1Inst1Ts1ElDtGE" caption="nm1s1Inst1Ts1.elDt" operation="GREATER_OR_EQUAL" property="nm1s1Inst1Ts1.elDt" operationEditable="true"/>
                    <propertyFilter id="filterConfig1A_Nm1s1Inst1Ts1ElDtLE" caption="nm1s1Inst1Ts1.elDt" operation="LESS_OR_EQUAL" property="nm1s1Inst1Ts1.elDt" operationEditable="true"/>
                </configuration>
            </configurations>
        </filter>
        <table id="tableMain"
                    width="100%"
                    multiselect="true"
                    dataContainer="colLoadrMain">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="refresh" type="refresh"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="id2" caption="id2"/>
                <column id="name1" caption="name"/>
                <column id="ts1.elDt" caption="ts1.date1"/>
                <column id="amt1" caption="amt1">
                    <formatter>
                        <number format="#0.000000"/>
                    </formatter>
                </column>
                <column id="amt2" caption="amt2">
                    <formatter>
                        <number format="#0.000000"/>
                    </formatter>
                </column>
                <column id="finCurcy1_Id"/>
                <column id="finCurcy2_Id"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <tabSheet  width="100%">
                    <tab id="tabCmd1" caption="Main" spacing="true">
                        <hbox spacing="true">
                            <button id="refreshBtn" action="tableMain.refresh"/>
                            <button id="reloadListsBtn" caption="Reload Lists" icon="font-icon:LIST"/>
                            <label value="|" align="MIDDLE_CENTER"/>
                            <button id="removeBtn" action="tableMain.remove"/>
                        </hbox>
                    </tab>

                    <tab id="tabCmd2" caption="View">
                        <hbox spacing="true">
                            <button id="finStmtHideBtn" caption="Hide Stmt Details" icon="font-icon:EYE"/>
                            <label value="|" align="MIDDLE_CENTER"/>
                            <button id="finTxactItmHideBtn" caption="Hide Txfers" icon="font-icon:EYE"/>
                        </hbox>
                    </tab>
                    <tab id="tabCmd3" caption="Create, Edit" spacing="true">
                        <hbox spacing="true">
                            <button id="createBtn" action="tableMain.create"/>
                            <button id="duplicateBtn" caption="Duplicate" icon="font-icon:COPY"/>
                            <button id="deriveBtn" caption="Derive" icon="font-icon:COPY"/>
                            <label value="|" align="MIDDLE_CENTER"/>
                            <button id="editBtn" action="tableMain.edit"/>
                            <label value="|" align="MIDDLE_CENTER"/>
                            <button id="updateColItemCalcValsBtn" caption="Update Calc Vals" icon="font-icon:REFRESH"/>
                        </hbox>
                        <hbox spacing="true">
                            <hbox caption="ts1.date1">
                                <hbox width="60px" height="100%" css="background-color: #F2F2F2 ; border: 1px solid #637497; border-radius: 8px;">
                                    <checkBox id="tmplt_Ts1ElDtFieldChk" align="MIDDLE_RIGHT"/>
                                </hbox>
                                <dateField id="tmplt_Ts1ElDtField" datatype="localDate" dateFormat="yyyy-MM-dd"/>
                            </hbox>
                        </hbox>
                    </tab>
                    <tab id="tabCmd4" caption="Filter" spacing="true">
                        <hbox spacing="true">
                            <button id="filterPrevTs1ElDtGEBtn" caption="Prev ts1.Date1" icon="ARROW_LEFT"/>
                            <button id="filterNextTs1ElDtGEBtn" caption="Next ts1.Date1" icon="ARROW_RIGHT"/>
                        </hbox>
                    </tab>
                </tabSheet>
            </buttonsPanel>
        </table>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
