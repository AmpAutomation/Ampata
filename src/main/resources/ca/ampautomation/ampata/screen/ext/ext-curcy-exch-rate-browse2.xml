<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://finRateBrowse2.caption"
        focusComponent="table">
    <data>
        <collection id="extCurcyExchRatesDc"
                    class="ca.ampautomation.ampata.entity.ExtCurcyExchRate"
                    fetchPlan="extCurcyExchRate-fetch-plan-base">
            <loader id="extCurcyExchRatesDl">
                <query>
                    <![CDATA[select e from ampata_ExtCurcyExchRate e ORDER BY e.id2]]>
                </query>
            </loader>
        </collection>
        <instance id="extCurcyExchRateDc"
                  class="ca.ampautomation.ampata.entity.ExtCurcyExchRate"
                  fetchPlan="extCurcyExchRate-fetch-plan-base">
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="save" icon="OK" caption="msg:///actions.Ok" shortcut="CTRL-ENTER"/>
        <action id="cancel" icon="CANCEL" caption="msg:///actions.Cancel" description="Esc"/>
    </actions>
    <dialogMode height="600" width="800"/>
    <layout>
        <split id="split" height="100%" orientation="vertical" reversePosition="true" width="100%">
            <vbox id="lookupBox" expand="table" height="100%" margin="false,true,false,false" spacing="true">
                <filter id="filter"
                        dataLoader="extCurcyExchRatesDl" collapsable="true" collapsed="true" columnsCount="4">
                    <properties include=".*"/>
                    <configurations>
                        <configuration id="filterConfig1" default="true">
                            <propertyFilter id="filterConfig1A_id2" caption="id2" operation="CONTAINS" property="id2" operationEditable="true" colspan="2"/>
                            <propertyFilter id="filterConfig1A_name1" caption="name1" operation="CONTAINS" property="name1" operationEditable="true" colspan="2"/>
                            <propertyFilter id="filterConfig1A_beg1Date1GE" caption="beg1.date1" operation="GREATER_OR_EQUAL" property="beg1.date1" operationEditable="true"/>
                            <propertyFilter id="filterConfig1A_beg1Date1LE" caption="beg1.date1" operation="LESS_OR_EQUAL" property="beg1.date1" operationEditable="true"/>
                            <propertyFilter id="filterConfig1A_finCurcy1_Id2" caption="finCurcy1_Id2" operation="EQUAL" property="finCurcy1_Id2" operationEditable="true">
                                <comboBox/>
                            </propertyFilter>
                            <propertyFilter id="filterConfig1A_finCurcy2_Id2" caption="finCurcy2_Id2" operation="EQUAL" property="finCurcy2_Id2" operationEditable="true">
                                <comboBox/>
                            </propertyFilter>
                        </configuration>
                    </configurations>
                </filter>
                <table id="table"
                            width="100%"
                            multiselect="true"
                            dataContainer="extCurcyExchRatesDc">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="refresh" type="refresh"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="id2" caption="id2"/>
                        <column id="id2Dup" caption="id2Dup"/>
                        <column id="sortIdx" caption="sortIdx"/>
                        <column id="name1" caption="name1"/>
                        <column id="desc1" caption="desc1" width="360px"/>
                        <column id="beg1.date1" caption="beg1.date1"/>
                        <column id="amt1" caption="amt1">
                            <formatter>
                                <number format="#0.000000"/>
                            </formatter>
                        </column>
                        <column id="amt2" caption="amt2">
                            <formatter>
                                <number format="#0.000000"/>
                            </formatter>
                        </column>
                        <column id="finCurcy1_Id2" caption="finCurcy1_Id2"/>
                        <column id="finCurcy2_Id2" caption="finCurcy2_Id2"/>
                    </columns>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <tabSheet  width="100%">
                            <tab id="tabCmd1" caption="Main" spacing="true">
                                <hbox spacing="true">
                                    <button id="reloadListsBtn" caption="Reload Lists" icon="font-icon:LIST"/>
                                    <button id="updateColCalcValsBtn" caption="Update All Calc Vals" icon="font-icon:REFRESH"/>
                                    <label value="|" align="MIDDLE_CENTER"/>
                                </hbox>
                            </tab>

                            <tab id="tabCmd2" caption="Create, Edit" spacing="true">
                                <hbox spacing="true">
                                    <button id="refreshBtn" action="table.refresh"/>
                                    <label value="|" align="MIDDLE_CENTER"/>
                                    <button id="createBtn" action="table.create"/>
                                    <button id="duplicateBtn" caption="Duplicate" icon="font-icon:COPY"/>
                                    <button id="deriveBtn" caption="Derive" icon="font-icon:COPY"/>
                                    <label value="|" align="MIDDLE_CENTER"/>
                                    <button id="removeBtn" action="table.remove"/>
                                    <label value="|" align="MIDDLE_CENTER"/>
                                    <button id="editBtn" action="table.edit"/>
                                    <label value="|" align="MIDDLE_CENTER"/>
                                    <button id="setBtn" caption="Set" icon="font-icon:REFRESH"/>
                                    <label value="|" align="MIDDLE_CENTER"/>
                                    <button id="updateColItemCalcValsBtn" caption="Update Calc Vals" icon="font-icon:REFRESH"/>
                                </hbox>
                                <hbox spacing="true">
                                    <hbox caption="finCurcy1_Id2" width="250px" expand="tmplt_FinCurcy1_Id2Field">
                                        <hbox width="60px" height="100%" css="background-color: #F2F2F2 ; border: 1px solid #637497; border-radius: 8px;">
                                            <checkBox id="tmplt_FinCurcy1_Id2FieldChk" align="MIDDLE_RIGHT" width="10px"/>
                                        </hbox>
                                        <comboBox id="tmplt_FinCurcy1_Id2Field"/>
                                    </hbox>
                                    <hbox caption="finCurcy2_Id2" width="250px" expand="tmplt_FinCurcy2_Id2Field">
                                        <hbox width="60px" height="100%" css="background-color: #F2F2F2 ; border: 1px solid #637497; border-radius: 8px;">
                                            <checkBox id="tmplt_FinCurcy2_Id2FieldChk" align="MIDDLE_RIGHT" width="10px"/>
                                        </hbox>
                                        <comboBox id="tmplt_FinCurcy2_Id2Field"/>
                                    </hbox>
                                    <hbox caption="beg1.date1">
                                        <hbox width="60px" height="100%" css="background-color: #F2F2F2 ; border: 1px solid #637497; border-radius: 8px;">
                                            <checkBox id="tmplt_Beg1Date1FieldChk" align="MIDDLE_RIGHT"/>
                                        </hbox>
                                        <dateField id="tmplt_Beg1Date1Field" datatype="localDate" dateFormat="yyyy-MM-dd"/>
                                    </hbox>
                                </hbox>
                            </tab>
                            <tab id="tabCmd4" caption="Filter" spacing="true">
                                <hbox spacing="true">
                                    <button id="filterPrevBeg1Date1GEBtn" caption="Prev beg1.Date1" icon="ARROW_LEFT"/>
                                    <button id="filterNextBeg1Date1GEBtn" caption="Next beg1.Date1" icon="ARROW_RIGHT"/>
                                </hbox>
                            </tab>
                        </tabSheet>
                    </buttonsPanel>
                </table>
                <pagination align="MIDDLE_RIGHT" itemsPerPageDefaultValue="50" itemsPerPageVisible="true">
                    <containerProvider dataContainer="extCurcyExchRatesDc"/>
                </pagination>                <hbox id="lookupActions" spacing="true" visible="false">
                    <button action="lookupSelectAction"/>
                    <button action="lookupCancelAction"/>
                </hbox>
            </vbox>
            <vbox id="editBox" expand="fieldGroupBox" height="100%" margin="true,false,false,false" spacing="true">
                <scrollBox id="fieldGroupBox" width="100%" contentMinHeight="400px" contentMinWidth="1200px">
                    <form id="form" dataContainer="extCurcyExchRateDc" width="100%">
                        <tabSheet id="tabsheet1" width="100%">
                            <tab id="tab_1"
                                 caption="General"
                                 margin="true"
                                 spacing="true">
                                <form id="tab1Form" dataContainer="extCurcyExchRateDc">
                                    <column width="480px">
                                        <hbox caption="desc1" expand="desc1Field" width="100%" colspan="3" >
                                            <textArea id="desc1Field" dataContainer="extCurcyExchRateDc" property="desc1" rows="1" tabIndex="10"/>
                                            <button id="updateDesc1FieldBtn" icon="font-icon:REFRESH" tabIndex="-1"/>
                                        </hbox>
                                        <hbox caption="id" expand="idField" width="100%">
                                            <textField id="idField" dataContainer="extCurcyExchRateDc" property="id" editable="false" tabIndex="10"/>
                                        </hbox>
                                        <hbox caption="id2" expand="id2Field" width="100%">
                                            <textField id="id2Field" dataContainer="extCurcyExchRateDc" property="id2" tabIndex="10"/>
                                            <button id="updateId2FieldBtn" icon="font-icon:REFRESH" tabIndex="-1"/>
                                        </hbox>
                                        <hbox caption="id2Calc" expand="id2CalcField" width="100%">
                                            <textField id="id2CalcField" dataContainer="extCurcyExchRateDc" property="id2Calc" editable="false" tabIndex="10"/>
                                            <button id="updateId2CalcFieldBtn" icon="font-icon:REFRESH" tabIndex="-1"/>
                                        </hbox>
                                        <hbox caption="id2Cmp" expand="id2CmpField" width="100%">
                                            <checkBox id="id2CmpField" dataContainer="extCurcyExchRateDc" property="id2Cmp" editable="false" tabIndex="10"/>
                                            <button id="updateId2CmpFieldBtn" icon="font-icon:REFRESH" tabIndex="-1"/>
                                        </hbox>
                                        <hbox caption="id2Dup" expand="id2DupField" width="100%">
                                            <textField id="id2DupField" dataContainer="extCurcyExchRateDc" property="id2Dup" editable="false" tabIndex="10"/>
                                            <button id="updateId2DupFieldBtn" icon="font-icon:REFRESH" tabIndex="-1"/>
                                        </hbox>
                                        <hbox caption="name1" expand="name1Field" width="100%">
                                            <textField id="name1Field" dataContainer="extCurcyExchRateDc"
                                                       property="name1" tabIndex="10"/>
                                        </hbox>
                                        <hbox caption="sortIdx" expand="sortIdxField" width="100%">
                                            <textField id="sortIdxField" dataContainer="extCurcyExchRateDc"
                                                       property="sortIdx" tabIndex="10"/>
                                        </hbox>
                                        <hbox caption="sortKey" expand="sortKeyField" width="100%">
                                            <textField id="sortKeyField" dataContainer="extCurcyExchRateDc"
                                                       property="sortKey" tabIndex="10"/>
                                        </hbox>
                                    </column>
                                    <column width="360px">
                                        <hbox caption="finCurcy1_Id2" expand="finCurcy1_Id2Field" width="100%">
                                            <comboBox id="finCurcy1_Id2Field" dataContainer="extCurcyExchRateDc"
                                                       property="finCurcy1_Id2" tabIndex="20"/>
                                            <button id="updateFinCurcy1_Id2FieldListBtn" icon="font-icon:LIST"
                                                    tabIndex="-1"/>
                                        </hbox>
                                        <hbox caption="finCurcy2_Id2" expand="finCurcy2_Id2Field" width="100%">
                                            <comboBox id="finCurcy2_Id2Field" dataContainer="extCurcyExchRateDc"
                                                       property="finCurcy2_Id2" tabIndex="20"/>
                                            <button id="updateFinCurcy2_Id2FieldListBtn" icon="font-icon:LIST"
                                                    tabIndex="-1"/>
                                        </hbox>
                                        <hbox caption="beg1.date1" expand="begDate1Field" width="100%">
                                            <dateField id="begDate1Field" dataContainer="finRateDc"
                                                       property="beg1.date1" dateFormat="yyyy-MM-dd"
                                                       tabIndex="20"/>
                                        </hbox>
                                    </column>
                                    <column width="360px">
                                        <hbox caption="amt1" expand="amt1Field" width="100%">
                                            <textField id="amt1Field" dataContainer="finRateDc"
                                                       property="amt1" tabIndex="30">
                                                <formatter>
                                                    <number format="#0.000000###"/>
                                                </formatter>
                                            </textField>
                                        </hbox>
                                        <hbox caption="amt2" expand="amt2Field" width="100%">>
                                            <textField id="amt2Field" dataContainer="finRateDc"
                                                       property="amt2" tabIndex="30">
                                                <formatter>
                                                    <number format="#0.000000###"/>
                                                </formatter>
                                            </textField>
                                            <button id="updateFinRateInvFieldBtn" icon="font-icon:REFRESH"
                                                    tabIndex="-1"/>
                                        </hbox>
                                    </column>
                                </form>
                            </tab>
                        </tabSheet>
                    </form>
                    <hbox id="actionsPane" spacing="true" visible="false">
                        <button id="saveBtn" action="save"/>
                        <button id="cancelBtn" action="cancel"/>
                    </hbox>
                </scrollBox>
            </vbox>
        </split>
    </layout>
</window>
