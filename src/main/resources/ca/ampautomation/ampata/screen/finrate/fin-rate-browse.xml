<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://finRateBrowse.caption"
        focusComponent="finRatesTable">
    <data readOnly="true">
        <collection id="finRatesDc"
                    class="ca.ampautomation.ampata.entity.FinRate"
                    fetchPlan="finRate-fetch-plan-base">
            <loader id="finRatesDl">
                <query>
                    <![CDATA[select e from ampata_FinRate e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="finRatesTable" spacing="true">
        <filter id="filter"
                dataLoader="finRatesDl" collapsable="true" collapsed="true" columnsCount="4">
            <properties include=".*"/>
            <configurations>
                <configuration id="filterConfig1" default="true">
                    <propertyFilter id="propFilter_id2" caption="id2" operation="CONTAINS" property="id2" operationEditable="true" colspan="2"/>
                    <propertyFilter id="propFilter_name1" caption="name1" operation="CONTAINS" property="name1" operationEditable="true" colspan="2"/>
                    <propertyFilter id="propFilter_beg1Date1GE" caption="beg1.date1" operation="GREATER_OR_EQUAL" property="beg1.date1" operationEditable="true"/>
                    <propertyFilter id="propFilter_beg1Date1LE" caption="beg1.date1" operation="LESS_OR_EQUAL" property="beg1.date1" operationEditable="true"/>
                    <propertyFilter id="propFilter_finCurcy1_Id" caption="finCurcy1_Id" operation="EQUAL" property="finCurcy1_Id" operationEditable="true">
                        <entityComboBox metaClass="ampata_GenNode"/>
                    </propertyFilter>
                    <propertyFilter id="propFilter_finCurcy2_Id" caption="finCurcy2_Id" operation="EQUAL" property="finCurcy2_Id" operationEditable="true">
                        <entityComboBox metaClass="ampata_GenNode"/>
                    </propertyFilter>
                </configuration>
            </configurations>
        </filter>
        <groupTable id="finRatesTable"
                    width="100%"
                    dataContainer="finRatesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="refresh" type="refresh"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="id2" caption="id2"/>
                <column id="name1" caption="name"/>
                <column id="beg1.date1" caption="beg1.date1"/>
                <column id="rate" >
                    <formatter>
                        <number format="#0.000000"/>
                    </formatter>
                </column>
                <column id="rateInv">
                    <formatter>
                        <number format="#0.000000"/>
                    </formatter>
                </column>
                <column id="finCurcy1_Id"/>
                <column id="finCurcy2_Id"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <hbox spacing="true">
                    <button id="reloadLists" caption="Reload Lists" icon="font-icon:LIST"/>
                </hbox>
                <hbox spacing="true">
                    <button id="createBtn" action="finRatesTable.create"/>
                    <button id="duplicateBtn" caption="Duplicate" icon="font-icon:COPY"/>
                    <button id="editBtn" action="finRatesTable.edit"/>
                    <button id="refreshBtn" action="finRatesTable.refresh"/>
                    <button id="removeBtn" action="finRatesTable.remove"/>
                </hbox>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
