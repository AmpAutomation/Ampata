<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://genChanEdit.caption"
        focusComponent="form">
    <data>
        <instance id="genNodeDc"
                  class="ca.ampautomation.ampata.entity.GenNode"
                  fetchPlan="genChan-fetch-plan-base">
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="scrollBox">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="genNodeDc">
                <column width="350px">
                    <textField id="id2Field" property="id2"/>
                    <textField id="id2CalcField" property="id2Calc"/>
                    <checkBox id="id2CmpField" property="id2Cmp"/>
                    <textField id="id2DupField" property="id2Dup"/>
                    <textField id="classNameField" property="className" editable="false"/>
                    <textField id="sortOrderField" property="sortOrder"/>
                    <entityPicker id="type1_IdField" property="type1_Id">
                        <actions>
                            <action id="entityLookup" type="entity_lookup"/>
                            <action id="entityClear" type="entity_clear"/>
                        </actions>
                    </entityPicker>
                    <textField id="type1_Id2Field" property="type1_Id2"/>
                    <textField id="instField" property="inst"/>
                    <textField id="name1Field" property="name1"/>
                    <entityPicker id="name1Pat1_IdField" property="name1Pat1_Id">
                        <actions>
                            <action id="entityLookup" type="entity_lookup"/>
                            <action id="entityClear" type="entity_clear"/>
                        </actions>
                    </entityPicker>
                    <textField id="name1Pat1_Id2Field" property="name1Pat1_Id2"/>
                    <textField id="name2Field" property="name2"/>
                    <textField id="abrvField" property="abrv"/>
                    <textArea id="desc1Field" property="desc1" rows="5"/>
                </column>
            </form>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
