<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://finTxactBrowse.caption"
        focusComponent="genNodesTable">
    <data readOnly="true">
        <collection id="genNodesDc"
                    class="ca.ampautomation.ampata.entity.GenNode"
                    fetchPlan="finTxact-fetch-plan-base">
            <loader id="genNodesDl">
                <query>
                    <![CDATA[select e from ampata_GenNode e where e.className = 'FinTxact']]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="genNodesTable" spacing="true">
        <filter id="filter"
                dataLoader="genNodesDl">
            <properties include=".*"/>
            <configurations>
                <configuration id="filterConfig1" default="true">
                    <propertyFilter operation="CONTAINS" property="id2" operationEditable="true"/>
                    <propertyFilter operation="CONTAINS" property="name1" operationEditable="true"/>
                </configuration>
            </configurations>
        </filter>
        <dataGrid id="genNodesTable"
                  width="100%"
                  dataContainer="genNodesDc" editorEnabled="true">
            <actions>
                <action id="create" type="create">
                    <properties>
                        <property name="screenId" value="ampata_FinTxact.edit"/>
                    </properties>
                </action>
                <action id="edit" type="edit">
                    <properties>
                        <property name="screenId" value="ampata_FinTxact.edit"/>
                    </properties>
                </action>
                <action id="refresh" type="refresh"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column property="id2" id="id2"/>
                <column property="id2Calc" id="id2Calc"/>
                <column property="id2Cmp" id="id2Cmp"/>
                <column property="id2Dup" id="id2Dup"/>
                <column property="parent1_Id" id="parent1_Id"/>
                <column property="parent1_Id2" id="parent1_Id2"/>
                <column property="ancestors1_Id2" id="ancestors1_Id2"/>
                <column property="sortOrder" id="sortOrder"/>
                <column property="type1_Id" id="type1_Id"/>
                <column property="type1_Id2" id="type1_Id2"/>
                <column property="inst" id="inst"/>
                <column property="name1" id="name1"/>
                <column property="name1Pat1_Id" id="name1Pat1_Id"/>
                <column property="name1Pat1_Id2" id="name1Pat1_Id2"/>
                <column property="name2" id="name2"/>
                <column property="abrv" id="abrv"/>
                <column property="desc1" id="desc1"/>

            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="genNodesTable.create"/>
                <button id="editBtn" action="genNodesTable.edit"/>
                <button id="refreshBtn" action="genNodesTable.refresh"/>
                <button id="removeBtn" action="genNodesTable.remove"/>
            </buttonsPanel>
        </dataGrid>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
