<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://finStmtBrowse2.caption"
        xmlns:app="http://schemas.company.com/ui.ex1/0.1/app-ui-components.xsd"
        focusComponent="table">
    <data>
        <collection id="finStmtsDc"
                    class="ca.ampautomation.ampata.entity.GenNode"
                    fetchPlan="finStmt-fetch-plan-base">
            <loader id="finStmtsDl">
                <query>
                    <![CDATA[select e from ampata_GenNode e where e.className = 'FinStmt']]>
                </query>
            </loader>
        </collection>
        <instance id="finStmtDc"
                  class="ca.ampautomation.ampata.entity.GenNode"
                  fetchPlan="finStmt-fetch-plan-base">
            <loader/>
        </instance>
        <collection id="finTxfersDc"
                    class="ca.ampautomation.ampata.entity.GenNode"
                    fetchPlan="finTxfer-fetch-plan-base">
            <loader id="finTxfersDl">
                <query>
                    <![CDATA[select e from ampata_GenNode e where e.finStmt1_Id = :finStmt1_Id]]>
                </query>
            </loader>
        </collection>

        <collection id="genNodeTypesDc" class="ca.ampautomation.ampata.entity.GenNodeType">
            <fetchPlan extends="_instance_name"/>
            <loader id="genNodeTypesDl">
                <query>
                    <![CDATA[select e from ampata_GenNodeType e where e.className = 'FinTxfer' order by e.id2]]>
                </query>
            </loader>
        </collection>

        <collection id="genChansDc" class="ca.ampautomation.ampata.entity.GenNode">
            <fetchPlan extends="_instance_name"/>
            <loader id="genChansDl">
                <query>
                    <![CDATA[select e from ampata_GenNode e where e.className = 'GenChan' order by e.id2]]>
                </query>
            </loader>
        </collection>

        <collection id="genDocVersDc" class="ca.ampautomation.ampata.entity.GenNode">
            <fetchPlan extends="_instance_name"/>
            <loader id="genDocVersDl">
                <query>
                    <![CDATA[select e from ampata_GenNode e where e.className = 'GenDocVer' order by e.id2]]>
                </query>
            </loader>
        </collection>

        <collection id="genFilesDc" class="ca.ampautomation.ampata.entity.GenNode">
            <fetchPlan extends="_instance_name"/>
            <loader id="genFilesDl">
                <query>
                    <![CDATA[select e from ampata_GenNode e where e.className = 'GenFile' order by e.id2]]>
                </query>
            </loader>
        </collection>

        <collection id="genTagsDc" class="ca.ampautomation.ampata.entity.GenNode">
            <fetchPlan extends="_instance_name"/>
            <loader id="genTagsDl">
                <query>
                    <![CDATA[select e from ampata_GenNode e where e.className = 'GenTag' order by e.id2]]>
                </query>
            </loader>
        </collection>

        <collection id="finAcctsDc" class="ca.ampautomation.ampata.entity.GenNode">
            <fetchPlan extends="_instance_name"/>
            <loader id="finAcctsDl">
                <query>
                    <![CDATA[select e from ampata_GenNode e where e.className = 'FinAcct' order by e.sortOrder]]>
                </query>
            </loader>
        </collection>

    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="save" icon="OK" caption="msg:///actions.Ok" shortcut="CTRL-ENTER"/>
        <action id="cancel" icon="CANCEL" caption="msg:///actions.Cancel" description="Esc"/>
    </actions>
    <dialogMode height="600" width="800"/>
    <layout>
        <split id="split" height="100%" orientation="vertical" width="100%" pos="60" reversePosition="true">
            <vbox id="lookupBox" expand="table" height="100%" margin="false,true,false,false" spacing="true">
                <filter id="filter" dataLoader="finStmtsDl" collapsable="true" collapsed="true" columnsCount="4">
                    <properties include=".*"/>
                    <configurations>
                        <configuration id="filterConfig1" default="true">
                            <propertyFilter operation="CONTAINS" property="id2" operationEditable="true"/>
                            <propertyFilter operation="EQUAL" property="finAcct1_Id" operationEditable="true"/>
                            <propertyFilter operation="GREATER_OR_EQUAL" property="beg.date1" operationEditable="true"/>
                            <propertyFilter operation="LESS_OR_EQUAL" property="beg.date1" operationEditable="true"/>
                        </configuration>
                    </configurations>
                </filter>
                <groupTable id="table"
                            width="100%"
                            dataContainer="finStmtsDc">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="refresh" type="refresh"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="id2"/>
                        <column id="id2Calc"/>
                        <column id="id2Cmp"/>
                        <column id="id2Dup"/>
                        <column id="beg.date1" caption="Beg-Date">
                            <formatter>
                                <date format="yyyy-MM-dd"/>
                            </formatter>
                        </column>
                        <column id="end.date1" caption="End-Date">
                            <formatter>
                                <date format="yyyy-MM-dd"/>
                            </formatter>
                        </column>
                        <column id="genChan1_Id" caption="genChan1"/>
                        <column id="finAcct1_Id" caption="finAcct1"/>
                        <column id="begBal"/>
                        <column id="endBal"/>
                        <column id="debtSum"/>
                        <column id="credSum"/>
                        <column id="netSum"/>
                        <column id="status"/>
                        <column id="note"/>
                        <column id="genTags1_Id2" caption="Tags"/>
                        <column id="genTag1_Id" caption="Tag1"/>
                    </columns>
                    <simplePagination/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn" action="table.create"/>
                        <button id="duplicateBtn" caption="Duplicate" icon="font-icon:COPY"/>
                        <button id="editBtn" action="table.edit"/>
                        <button id="refreshBtn" action="table.refresh"/>
                        <button id="removeBtn" action="table.remove"/>
                        <button id="finStmtHideBtn" caption="Hide Stmt Details" icon="font-icon:EYE"/>
                        <button id="finStmtUpdateAllCalcBtn" caption="Update All Calc Values" icon="font-icon:REFRESH"/>
                        <button id="finTxferHideBtn" caption="Hide Txfers" icon="font-icon:EYE"/>
                    </buttonsPanel>
                </groupTable>
                <hbox id="lookupActions" spacing="true" visible="false">
                    <button action="lookupSelectAction"/>
                    <button action="lookupCancelAction"/>
                </hbox>
            </vbox>
            <vbox id="editBox" expand="table2" height="100%">
                <form id="form" dataContainer="finStmtDc" width="100%" height="400px">
                    <tabSheet width="100%">
                        <tab id="tab_1"
                             caption="General"
                             margin="true"
                             spacing="true">
                            <form id="tab1Form" dataContainer="finStmtDc" width="100%" height="100%">
                                <column width="350px">
                                    <app:textFieldWithButton id="id2FieldWithButton" property="id2"/>
                                    <textField id="id2CalcField" property="id2Calc" editable="false"/>
                                    <checkBox id="id2CmpField" property="id2Cmp" editable="false"/>
                                    <textField id="id2DupField" property="id2Dup" editable="false"/>
                                    <textField id="classNameField" property="className" editable="false"/>
                                    <entityComboBox id="type1_IdField" dataContainer="finStmtDc"
                                                    optionsContainer="genNodeTypesDc"
                                                    property="type1_Id">
                                        <actions>
                                            <action id="entityLookup" type="entity_lookup"/>
                                            <action id="entityClear" type="entity_clear"/>
                                        </actions>
                                    </entityComboBox>
                                    <textField id="type1_Id2Field" property="type1_Id2" width="100%" editable="false"/>
                                    <textField id="name1Field" property="name1" width="100%"/>
                                </column>
                                <column width="350px">
                                    <textArea id="desc1Field" property="desc1" rows="8" rowspan="4" width="100%"/>
                                    <button id="updateDesc1Btn" caption="Update desc1" align="TOP_RIGHT"/>
                                    <entityComboBox id="genChan1_IdField" dataContainer="finStmtDc"
                                                    optionsContainer="genChansDc"
                                                    property="genChan1_Id">
                                        <actions>
                                            <action id="entityLookup" type="entity_lookup"/>
                                            <action id="entityClear" type="entity_clear"/>
                                        </actions>
                                    </entityComboBox>
                                    <textField id="genChan1_Id2Field" property="genChan1_Id2" width="100%" editable="false"/>
                                </column>
                                <column width="350px">
                                    <dateField id="BegDate1Field" property="beg.date1" dateFormat="yyyy-MM-dd" caption="Beg Date"/>
                                    <dateField id="EndDate1Field" property="end.date1" dateFormat="yyyy-MM-dd" caption="End Date"/>
                                </column>
                            </form>
                        </tab>
                        <tab id="tab_2"
                             caption="Docs, Files, Tags"
                             margin="true"
                             spacing="true">
                            <form id="tab2Form" dataContainer="finStmtDc" width="100%">
                                <column width="350px">
                                    <textArea id="genDocs1_Id2Field" property="genDocVers1_Id2" rows="4" editable="false"/>
                                    <entityComboBox id="genDocVer1_IdField" dataContainer="finStmtDc"
                                                    optionsContainer="genDocVersDc"
                                                    property="genDocVer1_Id">
                                        <actions>
                                            <action id="entityLookup" type="entity_lookup"/>
                                            <action id="entityClear" type="entity_clear"/>
                                        </actions>
                                    </entityComboBox>
                                    <textField id="genDocVer1_Id2Field" property="genDocVer1_Id2"/>
                                </column>
                                <column width="350px">
                                    <hbox/>
                                    <entityComboBox id="genFile1_IdField" dataContainer="finStmtDc"
                                                    optionsContainer="genFilesDc"
                                                    property="genFile1_Id">
                                        <actions>
                                            <action id="entityLookup" type="entity_lookup"/>
                                            <action id="entityClear" type="entity_clear"/>
                                        </actions>
                                    </entityComboBox>
                                    <textField id="genFile1_Id2Field" property="genFile1_Id2" editable="false"/>
                                    <textArea id="genFile1_URIField" property="genFile1_URI" rows="4"/>
                                </column>
                                <column width="350px">
                                    <textArea id="genTags1_Id2Field" property="genTags1_Id2" rows="4"/>
                                    <entityComboBox id="genTag1_IdField" dataContainer="finStmtDc"
                                                    optionsContainer="genTagsDc"
                                                    property="genTag1_Id">
                                        <actions>
                                            <action id="entityLookup" type="entity_lookup"/>
                                            <action id="entityClear" type="entity_clear"/>
                                        </actions>
                                    </entityComboBox>
                                    <textField id="genTag1_Id2Field" property="genTag1_Id2"/>
                                </column>
                            </form>
                        </tab>
                        <tab id="tab_5"
                             caption="Acct, Sum, Status"
                             margin="true"
                             spacing="true">
                            <form id="tab5Form" dataContainer="finStmtDc" width="100%">
                                <column width="350px">
                                    <entityComboBox id="finAcct1_IdField" dataContainer="finStmtDc"
                                                    optionsContainer="finAcctsDc"
                                                    property="finAcct1_Id">
                                        <actions>
                                            <action id="entityLookup" type="entity_lookup"/>
                                            <action id="entityClear" type="entity_clear"/>
                                        </actions>
                                    </entityComboBox>
                                    <textField id="finAcct1_Id2Field" property="finAcct1_Id2"/>
                                    <textField id="finAcct_Type1_Id2Field" property="finAcct1_Type1_Id2" editable="false"/>
                                    <comboBox id="statusField"
                                                    dataContainer="finStmtDc"
                                                    property="status">
                                    </comboBox>

                                </column>
                                <column width="350px">
                                    <textField id="begBalField" property="begBal"/>
                                    <textField id="endBalField" property="endBal" editable="false"/>
                                    <textField id="debtSumField" property="debtSum"/>
                                    <textField id="credSumField" property="credSum"/>
                                    <textField id="netSumField" property="netSum" editable="false"/>
                                </column>
                                <column width="350px">
                                    <hbox/>
                                    <hbox/>
                                    <hbox spacing="true">
                                        <label value="Calc"/>
                                        <textField id="debtSumCalcField" editable="false" width="100%"/>
                                        <label value="Diff"/>
                                        <textField id="debtSumDiffField" editable="false" width="100%"/>
                                    </hbox>
                                    <hbox spacing="true">
                                        <label value="Calc"/>
                                        <textField id="credSumCalcField" editable="false" width="100%"/>
                                        <label value="Diff"/>
                                        <textField id="credSumDiffField" editable="false" width="100%"/>
                                    </hbox>
                                    <hbox spacing="true">
                                        <label value="Calc"/>
                                        <textField id="netSumCalcField" editable="false" width="100%"/>
                                        <label value="Diff"/>
                                        <textField id="netSumDiffField" editable="false" width="100%"/>
                                    </hbox>
                                </column>
                            </form>
                        </tab>
                        <tab id="tab_7"
                             caption="Note"
                             margin="true"
                             spacing="true">
                            <form id="tab7Form" dataContainer="finStmtDc" width="100%">
                                <column width="100%">
                                    <textArea id="noteField" property="note"
                                              height="100%" width="100%"/>
                                </column>
                            </form>
                        </tab>
                    </tabSheet>
                </form>
                <groupTable id="table2"
                            width="100%"
                            dataContainer="finTxfersDc">
                    <actions>
                        <action id="create2" type="create">
                            <properties>
                                <property name="screenId" value="ampata_FinTxfer.edit"/>
                            </properties>
                        </action>
                        <action id="duplicate2"/>
                        <action id="edit2" type="edit">
                            <properties>
                                <property name="screenId" value="ampata_FinTxfer.edit"/>
                            </properties>
                        </action>
                        <action id="refresh2" type="refresh"/>
                        <action id="remove2" type="remove"/>
                    </actions>
                    <columns>
                        <column id="id2"/>
                        <column id="type1_Id"/>
                        <column id="desc1"/>
                        <column id="genDocVers1_Id2"/>
                        <column id="genDocVer1_Id"/>
                        <column id="genDocVer1_Id2"/>
                        <column id="genFile1_Id"/>
                        <column id="genFile1_Id2"/>
                        <column id="genTags1_Id2"/>
                        <column id="genTag1_Id"/>
                        <column id="genTag1_Id2"/>
                        <column id="beg.date1">
                            <formatter>
                                <date format="yyyy-MM-dd"/>
                            </formatter>
                        </column>
                        <column id="beg.time1"/>
                        <column id="finTxact1_BegDate1">
                            <formatter>
                                <date format="yyyy-MM-dd"/>
                            </formatter>
                        </column>
                        <column id="finTxact1_BegTime1"/>
                        <column id="genChan1_Id"/>
                        <column id="genChan1_Id2"/>
                        <column id="finTxset1_Id"/>
                        <column id="finTxset1_EI1_Role"/>
                        <column id="finTxset1_Type1_Id2"/>
                        <column id="finTxact1_Id"/>
                        <column id="finTxact1_EI1_Role"/>
                        <column id="finTxact1_Type1_Id2"/>
                        <column id="idX"/>
                        <column id="idY"/>
                        <column id="idZ"/>
                        <column id="stmtDescL1"/>
                        <column id="stmtDescL2"/>
                        <column id="stmtDescL3"/>
                        <column id="stmtDescAmt"/>
                        <column id="stmtRefId"/>
                        <column id="finAcct1_Id"/>
                        <column id="finDept1_Id"/>
                        <column id="finTaxLne1_Id"/>
                        <column id="finTaxLne1_Code"/>
                        <column id="finHow1_Id"/>
                        <column id="whatText1"/>
                        <column id="finWhat1_Id"/>
                        <column id="finTxact1_WhatText1"/>
                        <column id="finTxact1_What1_Id"/>
                        <column id="finTxset1_WhatText1"/>
                        <column id="finTxset1_What1_Id"/>
                        <column id="whyText1"/>
                        <column id="finWhy1_Id"/>
                        <column id="finTxact1_WhyText1"/>
                        <column id="finTxact1_Why1_Id"/>
                        <column id="finTxset1_WhyText1"/>
                        <column id="finTxset1_Why1_Id"/>
                        <column id="amtDebt"/>
                        <column id="amtCred"/>
                        <column id="amtNet"/>
                        <column id="finCurcy1_Id"/>
                        <column id="finFmla1_Id"/>
                        <column id="finTxfer1_Id"/>
                        <column id="finTxfer1_EI1_Rate"/>
                        <column id="calcRslt"/>
                    </columns>
                    <simplePagination/>
                    <buttonsPanel id="buttonsPanel2"
                                  alwaysVisible="true">
                        <button id="createBtn2" action="table2.create2"/>
                        <button id="duplicateBtn2" action="table2.duplicate2" caption="Duplicate" icon="font-icon:COPY"/>
                        <button id="editBtn2" action="table2.edit2"/>
                        <button id="refreshBtn2" action="table2.refresh2"/>
                        <button id="removeBtn2" action="table2.remove2"/>
                    </buttonsPanel>
                </groupTable>
                <hbox id="actionsPane" spacing="true" visible="false">
                    <button id="saveBtn" action="save"/>
                    <button id="cancelBtn" action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
