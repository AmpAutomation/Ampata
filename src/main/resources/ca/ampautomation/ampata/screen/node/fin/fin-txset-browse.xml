<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://finTxsetBrowse.caption"
        focusComponent="table">
    <data readOnly="true">
        <collection id="finTxsetsDc"
                    class="ca.ampautomation.ampata.entity.GenNode"
                    fetchPlan="finTxset-fetch-plan-base">
            <loader id="finTxsetsDl">
                <query>
                    <![CDATA[select e from ampata_GenNode e where e.className = 'FinTxset']]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="table" spacing="true">
        <filter id="filter"
                dataLoader="finTxsetsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="table"
                    width="100%"
                    dataContainer="finTxsetsDc">
            <actions>
                <action id="create" type="create">
                    <properties>
                        <property name="screenId" value="ampata_FinTxset.edit"/>
                    </properties>
                </action>
                <action id="edit" type="edit">
                    <properties>
                        <property name="screenId" value="ampata_FinTxset.edit"/>
                    </properties>
                </action>
                <action id="duplicate" />
                <action id="refresh" type="refresh"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="id2"/>
                <column id="id2Dup"/>
                <column id="type1_Id"/>
                <column id="desc1" width="320px"/>

                <column id="idTs.ts1" caption="idTs"/>
                <column id="idX"/>

                <column id="genChan1_Id"/>
                <column id="finHow1_Id"/>
                <column id="finWhat1_Id"/>
                <column id="finWhy1_Id"/>

                <column id="genDocVers1_Id2"/>
                <column id="genDocVer1_Id2"/>
                <column id="genDocVer1_Code"/>
                <column id="genDocVer1_Ver"/>
                <column id="genDocVer1_Name1"/>
                <column id="genFile1_Id2"/>
                <column id="genTags1_Id2"/>
                <column id="genTag1_Id2"/>
                <column id="genTag2_Id"/>
                <column id="genTag2_Id2"/>
                <column id="genTag3_Id"/>
                <column id="genTag3_Id2"/>
                <column id="genTag4_Id"/>
                <column id="genTag4_Id2"/>
                <column id="note"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="table.create"/>
                <button id="editBtn" action="table.edit"/>
                <button id="refreshBtn" action="table.refresh"/>
                <button id="removeBtn" action="table.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
