<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://usrNodeTypeBrowse.caption"
        focusComponent="usrNodeTypesTable">
    <data readOnly="true">
        <collection id="usrNodeTypesDc"
                    class="ca.ampautomation.ampata.entity.usr.UsrNodeType"
                    fetchPlan="usrNodeType-fetch-plan-base">
            <loader id="usrNodeTypesDl">
                <query>
                    <![CDATA[select e from ampata_UsrNodeType e order by e.id2, e.className]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="usrNodeTypesTable" spacing="true">
        <filter id="filter"
                dataLoader="usrNodeTypesDl" columnsCount="4">
            <properties include=".*"/>
            <configurations>
                <configuration id="filterConfig1" default="true">
                    <propertyFilter operation="CONTAINS" property="id2" editable="true"/>
                    <propertyFilter operation="CONTAINS" property="className" editable="true"/>
                    <propertyFilter operation="CONTAINS" property="name1" editable="true"/>
                </configuration>
            </configurations>
        </filter>
        <treeTable id="usrNodeTypesTable"
                   width="100%"
                   dataContainer="usrNodeTypesDc"
                   hierarchyProperty="parent1_Id">
            <actions>
                <action id="create" type="create"/>
                <action id="duplicate"/>
                <action id="edit" type="edit"/>
                <action id="refresh" type="refresh"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="id2"/>
                <column id="id2Calc"/>
                <column id="id2Cmp"/>
                <column id="className"/>
                <column id="parent1_Id"/>
                <column id="parent1_Id2"/>
                <column id="ancestors1_Id2"/>
                <column id="name1"/>
                <column id="abrv"/>
                <column id="desc1"/>
            </columns>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="usrNodeTypesTable.create"/>
                <button id="duplicateBtn" action="usrNodeTypesTable.duplicate" caption="Duplicate" icon="font-icon:COPY"/>
                <button id="editBtn" action="usrNodeTypesTable.edit"/>
                <button id="refreshBtn" action="usrNodeTypesTable.refresh"/>
                <button id="removeBtn" action="usrNodeTypesTable.remove"/>
            </buttonsPanel>
        </treeTable>
        <pagination align="MIDDLE_RIGHT" itemsPerPageDefaultValue="100" itemsPerPageVisible="true">
            <containerProvider dataContainer="usrNodeTypesDc"/>
        </pagination>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
