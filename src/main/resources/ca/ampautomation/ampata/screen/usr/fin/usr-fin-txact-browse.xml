<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://finTxactBrowse.caption"
        focusComponent="table">
    <data readOnly="true">
        <collection id="finTxactsDc"
                    class="ca.ampautomation.ampata.entity.usr.UsrNode"
                    fetchPlan="usrFinTxact-fetch-plan-base">
            <loader id="finTxactsDl">
                <query>
                    <![CDATA[select e from ampata_UsrNode e where e.className = 'FinTxact']]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="table" spacing="true">
        <filter id="filter"
                dataLoader="finTxactsDl">
            <properties include=".*"/>
            <configurations>
                <configuration id="filterConfig1" default="true">
                    <propertyFilter operation="CONTAINS" property="id2" operationEditable="true"/>
                    <propertyFilter operation="CONTAINS" property="name1" operationEditable="true"/>
                </configuration>
            </configurations>
        </filter>
        <groupTable id="table"
                  width="100%"
                  dataContainer="finTxactsDc">
            <actions>
                <action id="create" type="create">
                    <properties>
                        <property name="screenId" value="ampata_FinTxact.edit"/>
                    </properties>
                </action>
                <action id="edit" type="edit">
                    <properties>
                        <property name="screenId" value="ampata_FinTxact.edit"/>
                    </properties>
                </action>
                <action id="duplicate" />
                <action id="refresh" type="refresh"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="finTxset1_Id"/>
                <column id="finTxset1_Id.type1_Id" caption="Txs.type1"/>
                <column id="finTxset1_Id.desc1"  caption="Txs.desc1" width="320px"/>

                <column id="id2"/>
                <column id="id2Dup"/>
                <column id="type1_Id"/>
                <column id="finTxset1_EI1_Role" caption="Txa Role"/>
                <column id="desc1" width="320px"/>

                <column id="idTs.ts1" caption="idTs"/>
                <column id="idX"/>
                <column id="idY"/>

                <column id="genChan1_Id"/>
                <column id="finHow1_Id"/>
                <column id="finWhat1_Id"/>
                <column id="finWhy1_Id"/>

                <column id="finTxset1_GenDocVers1_Id2"/>
                <column id="finTxset1_GenTags1_Id2"/>
                <column id="finTxset1_FinAccts_Id2"/>

                <column id="finTxactItms1_Id2"/>
                <column id="finTxactItms1_FinAccts1_Id2"/>
                <column id="finTxactItms1_DebtSum"/>
                <column id="finTxactItms1_CredSum"/>
                <column id="finTxactItms1_IdCnt"/>
                <column id="finTxactItms1_DebtEqCred"/>

                <column id="finTxset1_Id.genChan1_Id"/>
                <column id="finTxset1_Id.finHow1_Id"/>
                <column id="finTxset1_Id.whatText1"/>
                <column id="finTxset1_Id.finWhat1_Id"/>
                <column id="finTxset1_Id.whyText1"/>
                <column id="finTxset1_Id.finWhy1_Id"/>

                <column id="genDocVers1_Id2"/>
                <column id="genDocVer1_Id2"/>
                <column id="genDocVer1_Code"/>
                <column id="genDocVer1_Ver"/>
                <column id="genDocVer1_Name1"/>
                <column id="genFile1_Id2"/>
                <column id="genTags1_Id2"/>
                <column id="genTag1_Id2"/>
                <column id="genTag2_Id"/>
                <column id="genTag2_Id2"/>
                <column id="genTag3_Id"/>
                <column id="genTag3_Id2"/>
                <column id="genTag4_Id"/>
                <column id="genTag4_Id2"/>
                <column id="note"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="table.create"/>
                <button id="editBtn" action="table.edit"/>
                <button id="refreshBtn" action="table.refresh"/>
                <button id="removeBtn" action="table.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
