<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://finStmtBrowse.caption"
        focusComponent="table">
    <data readOnly="true">
        <collection id="finStmtsDc"
                    class="ca.ampautomation.ampata.entity.usr.UsrNode"
                    fetchPlan="finStmt-fetch-plan-base">
            <loader id="finStmtsDl">
                <query>
                    <![CDATA[select e from ampata_UsrNode e where e.className = 'FinStmt']]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="table" spacing="true">
        <filter id="filter"
                dataLoader="finStmtsDl">
            <properties include=".*"/>
            <configurations>
                <configuration id="filterConfig1" default="true">
                    <propertyFilter operation="CONTAINS" property="id2" operationEditable="true"/>
                    <propertyFilter operation="CONTAINS" property="name1" operationEditable="true"/>
                </configuration>
            </configurations>
        </filter>
        <groupTable id="table"
                    width="100%"
                    dataContainer="finStmtsDc">
            <actions>
                <action id="create" type="create">
                    <properties>
                        <property name="screenId" value="ampata_FinStmt.edit"/>
                    </properties>
                </action>
                <action id="edit" type="edit">
                    <properties>
                        <property name="screenId" value="ampata_FinStmt.edit"/>
                    </properties>
                </action>
                <action id="refresh" type="refresh"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>

                <column id="id2"/>
                <column id="id2Calc"/>
                <column id="id2Dup"/>
                <column id="type1_Id"/>
                <column id="finAcct1_Id"/>
                <column id="idTs.ts1" caption="idTs"/>

                <column id="beg1.date1">
                    <formatter>
                        <date format="yyyy-MM-dd"/>
                    </formatter>
                </column>
                <column id="end1.date1">
                    <formatter>
                        <date format="yyyy-MM-dd"/>
                    </formatter>
                </column>
                <column id="amtBegBal"/>
                <column id="amtBegBalCalc"/>
                <column id="amtDebt"/>
                <column id="amtCred"/>
                <column id="amtNet"/>
                <column id="amtEndBalCalc"/>
                <column id="status"/>
                <column id="note"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="table.create"/>
                <button id="editBtn" action="table.edit"/>
                <button id="refreshBtn" action="table.refresh"/>
                <button id="removeBtn" action="table.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
