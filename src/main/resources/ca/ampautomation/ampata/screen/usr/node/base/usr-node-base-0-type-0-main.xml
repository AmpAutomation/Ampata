<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://usrNodeBaseType0Main.caption"
        focusComponent="tableMain">
    <data>
        <collection id="colCntnrMain"
                    class="ca.ampautomation.ampata.entity.usr.node.base.UsrNodeBaseType"
                    fetchPlan="fetchPlan_UsrNodeBaseType_Base">
            <loader id="colLoadrMain">
                <query>
                    <![CDATA[select e from enty_UsrNodeBaseType e order by e.sortKey, e.id2]]>
                </query>
            </loader>
        </collection>
        <instance id="instCntnrMain"
                  class="ca.ampautomation.ampata.entity.usr.node.base.UsrNodeBaseType"
                  fetchPlan="fetchPlan_UsrNodeBaseType_Base">
            <loader/>
            <collection id="colPropCntnrGenTag" property="genTags1_Id">
            </collection>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
        <presentations auto="true"/>
    </facets>
    <actions>
        <action id="save" icon="OK" caption="msg:///actions.Ok" shortcut="CTRL-ENTER"/>
        <action id="cancel" icon="CANCEL" caption="msg:///actions.Cancel" description="Esc"/>
    </actions>
    <dialogMode width="1024" height="768"/>
    <layout>
        <split id="split" height="100%" orientation="vertical" width="100%" pos="60" reversePosition="true">
            <vbox id="lookupBox" expand="tableMain" height="100%" margin="false,true,false,false" spacing="true">
                <treeTable id="tableMain"
                       width="100%"
                       multiselect="true"
                       hierarchyProperty="parent1_Id"
                       dataContainer="colCntnrMain">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="refresh" type="refresh"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="tenant" collapsed="true"/>
                        <column id="dtype"/>
                        <column id="id2"/>
                        <column id="id2Calc"/>
                        <column id="id2Cmp"/>
                        <column id="id2Dup"/>
                        <column id="parent1_Id" caption="parent1_Id"/>
                        <column id="sortIdx"/>
                        <column id="sortKey"/>
                        <column id="name1"/>
                        <column id="abrv"/>
                        <column id="desc1"/>
                        <column id="note"/>
                    </columns>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <tabSheet  width="100%">
                            <tab id="tabCmd1" caption="Main" spacing="true" margin="true, false, false, false">
                                <hbox spacing="true">
                                    <button id="reloadListsBtn" caption="Reload Lists" icon="font-icon:LIST"/>
                                    <button id="updateColCalcValsBtn" caption="Update All Calc Vals" icon="font-icon:REFRESH"/>
                                </hbox>
                            </tab>
                            <tab id="tabCmd2" caption="View" spacing="true" margin="true, false, false, false">
                            </tab>
                            <tab id="tabCmd3" caption="Filter" spacing="true" margin="true, false, false, false">
                                <filter id="filter" dataLoader="colLoadrMain" collapsable="true" collapsed="false" columnsCount="5">
                                    <properties include=".*"/>
                                    <configurations>
                                        <configuration id="filterConfig1" default="true">
                                            <groupFilter operation="AND" caption="GroupA">
                                                <propertyFilter id="filterConfig1A_Id2" caption="id2" operation="CONTAINS" property="id2" operationEditable="true"/>
                                                <propertyFilter id="filterConfig1A_Id2Dup" caption="id2Dup" operation="EQUAL" property="id2Dup" operationEditable="true"/>
                                                <propertyFilter id="filterConfig1A_Name1" caption="name1" operation="CONTAINS" property="name1" operationEditable="true"/>
                                                <propertyFilter id="filterConfig1A_Desc1" caption="desc1" operation="CONTAINS" property="desc1" operationEditable="true"/>

                                                <propertyFilter id="filterConfig1A_Parent1_Id" caption="parent1" operation="EQUAL" property="parent1_Id" operationEditable="true">
                                                    <entityPicker metaClass="enty_UsrNodeBaseType"/>
                                                </propertyFilter>
                                                <propertyFilter id="filterConfig1A_Dtype" caption="dtype" operation="EQUAL" property="dtype" operationEditable="true">
                                                    <textField/>
                                                </propertyFilter>
                                            </groupFilter>
                                        </configuration>
                                    </configurations>
                                </filter>
                            </tab>
                            <tab id="tabCmd4" caption="Create, Edit" spacing="true" margin="true, false, false, false">
                                <hbox spacing="true">
                                    <button id="refreshBtn" action="tableMain.refresh"/>
                                    <label value="|" align="MIDDLE_CENTER"/>
                                    <button id="createBtn" action="tableMain.create"/>
                                    <button id="duplicateBtn" caption="Duplicate" icon="font-icon:COPY"/>
                                    <label value="|" align="MIDDLE_CENTER"/>
                                    <button id="removeBtn" action="tableMain.remove"/>
                                    <label value="|" align="MIDDLE_CENTER"/>
                                    <button id="editBtn" action="tableMain.edit"/>
                                    <label value="|" align="MIDDLE_CENTER"/>
                                    <button id="setBtn" caption="Set" icon="font-icon:REFRESH"/>
                                    <hbox>
                                        <label value="sortIdx" align="MIDDLE_CENTER"/>
                                        <button id="rebuildSortIdxBtn" caption="Rebiuld"/>
                                        <button id="moveFrstSortIdxBtn" caption="Frst"/>
                                        <button id="movePrevSortIdxBtn" icon="ARROW_LEFT"/>
                                        <button id="moveNextSortIdxBtn" icon="ARROW_RIGHT"/>
                                        <button id="moveLastSortIdxBtn" caption="Last"/>
                                    </hbox>
                                    <label value="|" align="MIDDLE_CENTER"/>
                                    <button id="updateColItemCalcValsBtn" caption="Update Calc Vals" icon="font-icon:REFRESH"/>
                                    <button id="updateColItemId2Btn" caption="Update Id2" icon="font-icon:REFRESH"/>
                                </hbox>
                                <tabSheet width="100%">
                                    <tab id="tabCmd4_Tab1" caption="Main" spacing="true">
                                        <hbox spacing="true">
                                            <hbox caption="SortIdx">
                                                <hbox height="100%" css="background-color: #F2F2F2 ; border: 1px solid #637497; border-radius: 8px;">
                                                    <hbox width="5px"/>
                                                    <radioButtonGroup id="tmplt_SortIdxFieldRdo" orientation="horizontal" align="MIDDLE_LEFT"/>
                                                </hbox>
                                                <textField id="tmplt_SortIdxField" datatype="int" width="40px"/>
                                            </hbox>
                                        </hbox>
                                    </tab>
                                </tabSheet>
                            </tab>
                            <tab id="tabCmd9" caption="Options" spacing="true" margin="true, false, false, false">
                                <hbox>
                                    <label value="CalcVals Option"/>
                                    <hbox width="5px"/>
                                    <comboBox id="updateColItemCalcValsOption" width="100px"/>
                                </hbox>
                            </tab>
                        </tabSheet>
                    </buttonsPanel>
                </treeTable>
                <pagination align="MIDDLE_RIGHT" itemsPerPageDefaultValue="50" itemsPerPageVisible="true">
                    <containerProvider dataContainer="colCntnrMain"/>
                </pagination>
                <hbox id="lookupActions" spacing="true" visible="false">
                    <button action="lookupSelectAction"/>
                    <button action="lookupCancelAction"/>
                </hbox>
            </vbox>
            <vbox id="editBox" expand="form" spacing="true" margin="false,false,false,false" height="100%" >
                <form id="form" dataContainer="instCntnrMain">
                    <tabSheet id="tabsheet1" height="100%" width="100%">
                        <tab id="tab_1"
                             caption="Main"
                             expand="tab1_hbox3"
                             margin="true">

                            <hbox id="tab1_hbox1" width="100%" spacing="true">
                                <hbox caption="desc1" expand="desc1Field" width="2304px">
                                    <textArea id="desc1Field" dataContainer="instCntnrMain" property="desc1" rows="1"/>
                                    <button id="updateDesc1FieldBtn" icon="font-icon:REFRESH" tabIndex="-1"/>
                                    <button id="updateDesc1FieldFmlaBtn" icon="font-icon:WRENCH" tabIndex="-1"/>
                                </hbox>
                            </hbox>

                            <hbox id="tab1_hbox2" width="100%" spacing="true">
                                <hbox caption="genTags" expand="genTags1_IdField" width="2304px">
                                    <tagField id="genTags1_IdField" dataContainer="instCntnrMain" property="genTags1_Id">
                                        <query entityClass="ca.ampautomation.ampata.entity.usr.item.gen.UsrItemGenTag" fetchPlan="_instance_name"
                                               escapeValueForLike="true" searchStringFormat="%${searchString}%">
                                            <![CDATA[select e from enty_UsrItemGenTag e where lower(e.id2) like lower(:searchString) escape '\']]>
                                        </query>
                                    </tagField>
                                </hbox>
                            </hbox>

                            <hbox id="tab1_hbox3" width="100%" spacing="true">
                                <vbox width="374px">
                                    <hbox caption="id" expand="id" width="100%">
                                        <textField id="id" dataContainer="instCntnrMain"
                                                   property="id" editable="false"/>
                                    </hbox>
                                    <hbox caption="tenant" expand="tenantField" width="100%">
                                        <textField id="tenantField" dataContainer="instCntnrMain"
                                                   property="tenant" editable="false"/>
                                    </hbox>
                                    <hbox caption="dtype" expand="dtypeField" width="100%">
                                        <textField id="dtypeField" dataContainer="instCntnrMain"
                                                   property="dtype" editable="false"/>
                                    </hbox>
                                    <hbox caption="id2" expand="id2Field" width="100%">
                                        <textField id="id2Field" dataContainer="instCntnrMain"
                                                   property="id2"/>
                                        <button id="updateId2FieldBtn" icon="font-icon:REFRESH" tabIndex="-1"/>
                                    </hbox>
                                    <hbox caption="id2Calc" expand="id2CalcField" width="100%">
                                        <textField id="id2CalcField" dataContainer="instCntnrMain"
                                                   property="id2Calc" editable="false"/>
                                        <button id="updateId2CalcFieldBtn" icon="font-icon:REFRESH" tabIndex="-1"/>
                                    </hbox>
                                    <hbox width="100%" spacing="true">
                                        <hbox caption="id2Cmp" expand="id2CmpField" width="181px">
                                            <checkBox id="id2CmpField" dataContainer="instCntnrMain"
                                                      property="id2Cmp" editable="false"/>
                                            <button id="updateId2CmpFieldBtn" icon="font-icon:REFRESH" tabIndex="-1"/>
                                        </hbox>
                                        <hbox caption="id2Dup" expand="id2DupField" width="181px">
                                            <textField id="id2DupField" dataContainer="instCntnrMain"
                                                       property="id2Dup" editable="false"/>
                                            <button id="updateId2DupFieldBtn" icon="font-icon:REFRESH" tabIndex="-1"/>
                                        </hbox>
                                    </hbox>
                                    <hbox width="100%" spacing="true">
                                        <hbox caption="sortIdx" expand="sortIdxField" width="181px">
                                            <textField id="sortIdxField" dataContainer="instCntnrMain"
                                                       property="sortIdx"/>
                                        </hbox>
                                        <hbox caption="sortKey" expand="sortKeyField" width="181px">
                                            <textField id="sortKeyField" dataContainer="instCntnrMain"
                                                       property="sortKey"/>
                                            <button id="updateSortKeyFieldBtn" icon="font-icon:REFRESH" tabIndex="-1"/>
                                        </hbox>
                                    </hbox>
                                </vbox>

                                <vbox width="374px">
                                    <hbox caption="parent1_Id" expand="parent1_IdField" width="100%">
                                        <entityPicker id="parent1_IdField" dataContainer="instCntnrMain"
                                                      property="parent1_Id">
                                            <actions>
                                                <action id="entityLookup" type="entity_lookup">
                                                    <properties>
                                                        <property name="openMode" value="THIS_TAB"/>
                                                        <property name="screenClass" value="ca.ampautomation.ampata.screen.usr.node.base.UsrNodeBase0Lookup"/>
                                                    </properties>
                                                </action>
                                                <action id="entityOpen" type="entity_open"/>
                                                <action id="entityClear" type="entity_clear"/>
                                            </actions>
                                        </entityPicker>
                                    </hbox>
                                    <hbox caption="name1" expand="name1Field" width="100%">
                                        <textField id="name1Field" dataContainer="instCntnrMain"
                                                   property="name1"/>
                                        <button id="updateName1FieldBtn" icon="font-icon:REFRESH" tabIndex="-1"/>
                                        <button id="updateName1FieldFmlaBtn" icon="font-icon:WRENCH" tabIndex="-1"/>
                                    </hbox>
                                </vbox>

                            </hbox>

                        </tab>

                        <tab id="tab_9"
                             caption="Note"
                             expand="tab9_hbox1"
                             margin="true">

                            <hbox id="tab9_hbox1" width="100%" spacing="true">
                                <hbox caption="note" expand="noteField" width="2304px" >
                                    <textArea id="noteField" dataContainer="instCntnrMain"
                                              property="note"/>
                                </hbox>
                            </hbox>
                        </tab>
                    </tabSheet>
                </form>
                <hbox id="actionsPane" spacing="true" visible="false">
                    <button id="saveBtn" action="save"/>
                    <button id="cancelBtn" action="cancel"/>
                    <label value="|" align="MIDDLE_CENTER"/>
                    <button id="updateInstItemCalcValsBtn" caption="Update Calc Vals"/>
                    <label value="Upd Option" align="MIDDLE_RIGHT"/>
                    <comboBox id="updateInstItemCalcValsOption" width="160px"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
