<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://usrNodeFinAcctTypeBrowse.caption"
        focusComponent="tableMain">
    <data readOnly="true">
        <collection id="colCntnrMain"
                    class="ca.ampautomation.ampata.entity.usr.node.base.UsrNodeBaseType"
                    fetchPlan="fetchPlan_UsrNodeFinAcctType_Base">
            <loader id="colLoadrMain">
                <query>
                    <![CDATA[select e from enty_UsrNodeBaseType e where e.className = 'UsrNodeFinAcct' ]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode width="1024" height="768"/>
    <layout expand="tableMain" spacing="true">
        <filter id="filter"
                dataLoader="colLoadrMain">
            <properties include=".*"/>
        </filter>
        <table id="tableMain"
                    width="100%"
                    dataContainer="colCntnrMain">
            <actions>
                <action id="create" type="create">
                    <properties>
                        <property name="screenId" value="ampata_FinAcctType.edit"/>
                    </properties>
                </action>
                <action id="duplicate"/>
                <action id="edit" type="edit">
                    <properties>
                        <property name="screenId" value="ampata_FinAcctType.edit"/>
                    </properties>
                </action>
                <action id="refresh" type="refresh"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="id2"/>
                <column id="id2Calc"/>
                <column id="id2Cmp"/>
                <column id="parent1_Id"/>
                <column id="parent1_Id2"/>
                <column id="ancestors1_Id2"/>
                <column id="sortIdx"/>
                <column id="name1"/>
                <column id="abrv"/>
                <column id="desc1"/>
                <column id="balIncOnDebt"/>
                <column id="balIncOnCred"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="tableMain.create"/>
                <button id="duplicateBtn" action="tableMain.duplicate" caption="Duplicate"/>
                <button id="editBtn" action="tableMain.edit"/>
                <button id="refreshBtn" action="tableMain.refresh"/>
                <button id="removeBtn" action="tableMain.remove"/>
            </buttonsPanel>
        </table>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
