<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://sysNodeBrowse.caption"
        focusComponent="sysNodesTable">
    <data readOnly="true">
        <collection id="sysNodesDc"
                    class="ca.ampautomation.ampata.entity.SysNode"
                    >
            <fetchPlan extends="sysNode-fetch-plan-base"/>
            <loader id="sysNodesDl">
                <query>
                    <![CDATA[select e from ampata_SysNode e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="sysNodesTable" spacing="true">
        <filter id="filter" columnsCount="1"
                dataLoader="sysNodesDl">
            <properties include=".*"/>
            <configurations>
                <configuration id="filterConfig1" default="true">
                    <propertyFilter operation="CONTAINS" property="id2" operationEditable="true"/>
                    <propertyFilter operation="CONTAINS" property="className" operationEditable="true"/>
                    <propertyFilter operation="EQUAL" property="type1_Id" operationEditable="true"/>
                </configuration>
            </configurations>
        </filter>
        <groupTable id="sysNodesTable"
                    width="100%"
                    dataContainer="sysNodesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="duplicate"/>
                <action id="edit" type="edit"/>
                <action id="refresh" type="refresh"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="id2"/>
                <column id="id2Calc"/>
                <column id="id2Cmp"/>
                <column id="id2Dup"/>
                <column id="className"/>
                <column id="parent1_Id"/>
                <column id="parent1_Id2"/>
                <column id="ancestors1_Id2"/>
                <column id="sortIdx"/>
                <column id="type1_Id"/>
                <column id="type1_Id2"/>
                <column id="inst"/>
                <column id="name1"/>
                <column id="name1SysPat1_Id"/>
                <column id="name1SysPat1_Id2"/>
                <column id="name2"/>
                <column id="abrv"/>
                <column id="desc1"/>
                <column id="genDocVers1_Id2"/>
                <column id="genDocVer1_Id"/>
                <column id="genDocVer1_Id2"/>
                <column id="genFile1_Id"/>
                <column id="genFile1_Id2"/>
                <column id="genTags1_Id2"/>
                <column id="genTag1_Id"/>
                <column id="genTag1_Id2"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="sysNodesTable.create"/>
                <button id="duplicateBtn" action="sysNodesTable.duplicate" caption="Duplicate" icon="font-icon:COPY"/>
                <button id="editBtn" action="sysNodesTable.edit"/>
                <button id="refreshBtn" action="sysNodesTable.refresh"/>
                <button id="removeBtn" action="sysNodesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
