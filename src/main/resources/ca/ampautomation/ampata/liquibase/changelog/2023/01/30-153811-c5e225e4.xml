<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="ampata">
        <createTable tableName="AMPATA_EXT_CURCY_EXCH_RATE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_AMPATA_EXT_CURCY_EXCH_RATE"/>
            </column>
            <column name="ID2" type="VARCHAR(255)"/>
            <column name="ID2_CALC" type="VARCHAR(255)"/>
            <column name="ID2_CMP" type="BOOLEAN"/>
            <column name="ID2_DUP" type="INT"/>
            <column name="SORT_IDX" type="INT"/>
            <column name="SORT_KEY" type="VARCHAR(255)"/>
            <column name="NAME1" type="VARCHAR(255)"/>
            <column name="DESC1" type="VARCHAR(255)"/>
            <column name="AMT1" type="DECIMAL(19, 9)"/>
            <column name="AMT2" type="DECIMAL(19, 9)"/>
            <column name="FIN_CURCY1__ID2" type="VARCHAR(255)"/>
            <column name="FIN_CURCY2__ID2" type="VARCHAR(255)"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="BEG1_DATE1" type="DATE"/>
            <column name="BEG1_DATE1_YR" type="INT"/>
            <column name="BEG1_DATE1_QTR" type="INT"/>
            <column name="BEG1_DATE1_MON" type="INT"/>
            <column name="BEG1_DATE1_MON2" type="VARCHAR(255)"/>
            <column name="BEG1_DATE1_DAY" type="INT"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="ampata">
        <addColumn tableName="AMPATA_SYS_ENTITY">
            <column name="SORT_IDX" type="INT"/>
        </addColumn>
    </changeSet>
    <changeSet id="3" author="ampata">
        <dropColumn columnName="sort_order" tableName="ampata_sys_entity"/>
    </changeSet>
</databaseChangeLog>