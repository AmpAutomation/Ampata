<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet  id="1"  author="ampata">
        <dropColumn  tableName="AMPATA_GEN_NODE">
            <column name="GEN_CHAN2__ID"/>
            <column name="GEN_CHAN2__ID2"/>
        </dropColumn>
    </changeSet>
    <changeSet  id="2"  author="ampata">
        <addColumn  tableName="AMPATA_GEN_NODE">
            <column name="FIN_BAL_SET1__ID"  type="UUID"/>
            <column name="FIN_BAL_SET1__ID2"  type="VARCHAR(255)"/>
            <column name="GEN_CHAN2__ID"  type="UUID"/>
            <column name="GEN_CHAN2__ID2"  type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="3" author="ampata">
        <addForeignKeyConstraint baseColumnNames="FIN_BAL_SET1__ID" baseTableName="AMPATA_GEN_NODE"
                                 constraintName="FK_AMPATA_GEN_NODE_ON_FIN_BAL_SET1_" referencedColumnNames="ID"
                                 referencedTableName="AMPATA_GEN_NODE"/>
        <createIndex indexName="IDX_GENNODE_FIN_BAL_SET1__ID" tableName="AMPATA_GEN_NODE">
            <column name="FIN_BAL_SET1__ID"/>
        </createIndex>
        <addForeignKeyConstraint baseColumnNames="GEN_CHAN2__ID" baseTableName="AMPATA_GEN_NODE"
                                 constraintName="FK_AMPATA_GEN_NODE_ON_GEN_CHAN2_" referencedColumnNames="ID"
                                 referencedTableName="AMPATA_GEN_NODE"/>
        <createIndex indexName="IDX_GENNODE_GEN_CHAN2__ID" tableName="AMPATA_GEN_NODE">
            <column name="GEN_CHAN2__ID"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>